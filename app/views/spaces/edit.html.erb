<!-- Validation failure messages -->
<% if @space.errors.any? %>
  <% @space.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Space #<%= @space.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_space/<%= @space.id %>" method="post" enctype="multipart/form-data">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @space.name %>">
      </div>

      <!-- Label and input for address -->
      <div class="form-group">
        <label for="address" class="control-label">
          Address
        </label>

        <input type="text" id="address" name="address" placeholder="Address" class="form-control" value="<%= @space.address %>">
      </div>

      <!-- Label and input for phone_number -->
      <div class="form-group">
        <label for="phone_number" class="control-label">
          Phone number
        </label>

        <input type="text" id="phone_number" name="phone_number" placeholder="Phone number" class="form-control" value="<%= @space.phone_number %>">
      </div>

      <!-- Label and input for picture -->
      <div class="form-group">
        <label for="picture" class="control-label">
          Picture
        </label>

        <%= cl_image_tag(@space.picture.to_s, :width => 90, :height => 90, :crop => :thumb) %>
        <input type="file" id="picture" name="picture" class="form-control">
      </div>

      <button class="btn btn-warning">
        Update Space
      </button>
      or
      <a href="/spaces/<%= @space.id %>">Cancel</a>
    </form>
  </div>
</div>

<div class="page-header">
  <h3><%= @user.email %></h3>
</div>

<!-- A User has many reviews and spaces -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        <%= @user.reviews.count %> reviews written for <%= @user.spaces.count %> spaces
      </li>

      <% @user.reviews.each do |review| %>
        <li class="list-group-item">
          <a href="/spaces/<%= review.space_id %>">
            <%= review.space.name %>
          </a>
          <br>
          <small><em>"<%= review.comments %>"</em></small>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/reviews/<%= review.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <%if current_user == review.user %>
              <a href="/reviews/<%= review.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>
              <a href="/delete_review/<%= review.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>


<div class="btn-group btn-group-justified">
  <a href="/spaces" class="btn btn-primary">
    Back
  </a>
</div>
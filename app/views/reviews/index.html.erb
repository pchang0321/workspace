<div class="page-header">
  <h1>
    My Reviews
    <a href="/reviews/new" class="btn btn-lg btn-success">New Review</a>
  </h1>
  <h4><%= Review.where(user_id: current_user.id).count %> reviews written</h4>
</div>



<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Space</th>
        <th>Ambience</th>
        <th>Roominess</th>
        <th>Food & Drink</th>
        <th>Outlets</th>
        <th>Wifi</th>
        <th>Overall</th>        
        <th>Comments</th>        
        <th>Actions</th>
      </tr>

      <% @reviews.each do |review| %>
      <tr>
        <td>
          <% if review.user.present? %>
            <a href="/users/<%= review.user.id %>">
              <%= review.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if review.space.present? %>
            <a href="/spaces/<%= review.space.id %>">
              <%= review.space.name %>
            </a>
          <% end %>
        </td>
        <td><%= review.ambience %></td>
        <td><%= review.roominess %></td>
        <td><%= review.fooddrink %></td>
        <td><%= review.outlets %></td>
        <td><%= review.wifi %></td>
        <td><%= review.overall %></td>
        <td><%= review.comments %></td>        
        <td>
          <a href="/reviews/<%= review.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == review.user %>
            <a href="/reviews/<%= review.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_review/<%= review.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @reviews, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
